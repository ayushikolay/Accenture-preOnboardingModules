*********************************************************************************************************************************************************





   
    var $checkboxes=$("#form input[type='checkbox']");
    $checkboxes.change(function(){
        var x=$checkboxes.filter(':checked').length;
        if(x == 1)
        {$('#result').text(x+" box is checked");}
        else
        {
        $('#result').text(x+" boxes are checked");
        }
    });
    



















    <script>
        
        function validate()
        {
            var bcats=document.getElementsByName("bookCategory");
            var bcat;
            var price;
            var disc;
            for(var i=0;i<bcats.length;i++)
            {
                if(bcats[i].checked)
                {
                    bcat=bcats[i].value;
                }
            }
            
            var total;
            var bcount=document.getElementById("bookval").value;
         
            if(bcat == "Science")
            {
                price=400;
                if(bcount<=250)
                {
                    total=bcount*0.95*price;
                }
                else if(bcount>250)
                {
                    total=bcount*0.93*price;
                }
            }
            else if(bcat=="Comics")
            {
                price=300;
                if(bcount<=250)
                {
                    total=price*0.97*bcount;
                }
                else if(bcount>250)
                {
                    total=price*0.96*bcount;
                }
            }
            
            document.getElementById("result").innerHTML="Total Price is:"+total;
            return false;
            
        }
        
    </script>
    <body>
        <h1>E-BOOK GRAND SALE</h1>
        <form onsubmit="return validate()">

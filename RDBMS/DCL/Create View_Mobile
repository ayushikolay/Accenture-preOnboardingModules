
create view customer_mobile_details
as select c.customer_id, c.customer_name,c.mobile, s.salesid, s.net_amount, m.model_name, m.manufacturer
from customer_info c 
join sales_info s 
on c.customer_id=s.customer_id
join mobile_master m 
on s.ime_no=m.ime_no
order by c.customer_id, c.customer_name, s.salesid;
